[flake8]
# Set maximum line length to 120 (or 88 for Black compatibility)
max-line-length = 120

# Ignore specific error codes (optional)
ignore = 
    E501,  # Line too long (handled by max-line-length)
    W503,  # Line break before binary operator (conflicts with Black)
    E203,  # Whitespace before ':' (conflicts with Black)

# Exclude certain directories from linting
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

# Per-file ignores (optional)
per-file-ignores =
    __init__.py:F401